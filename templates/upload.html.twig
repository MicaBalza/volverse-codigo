<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="styles/index.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script defer src="js/upload.js" type="text/javascript"></script>

    <title>Volverse Código</title>
  </head>
  <body>
    <div class="box">
      <div class="glitch">
        <div class="glitch__img"></div>
        <div class="glitch__img"></div>
        <div class="glitch__img"></div>
        <div class="glitch__img"></div>
        <div class="glitch__img"></div>
      </div>
    </div>
    <!-- multistep form -->
    {{ form_start(form, {'attr': {'id': 'msform'}}) }}
      <!-- progressbar -->
      <ul id="progressbar">
        <li class="active"></li>
        <li></li>
        <li></li>
      </ul>
      <!-- fieldsets -->
      <fieldset>
        <h2>¿ Qué tipo de cápsula querés crear ?</h2>
        <hr class="border--pink" />
        <div class="opciones">
          <ul class="capsule-types">
            <li class="type">
              {{ form_widget(form.kind.children[0], {'id': 'radio1', 'attr': {'class': 'radio-button'}}) }}
              <label for="radio1">Audio</label>
            </li>

            <li class="type">
              {{ form_widget(form.kind.children[1], {'id': 'radio2', 'attr': {'class': 'radio-button'}}) }}
              <label for="radio2">Video</label>
            </li>
            <li class="type">
              {{ form_widget(form.kind.children[2], {'id': 'radio3', 'attr': {'class': 'radio-button'}}) }}
              <label for="radio3">Texto</label>
            </li>
            <li class="type">
              {{ form_widget(form.kind.children[3], {'id': 'radio4', 'attr': {'class': 'radio-button'}}) }}
              <label for="radio4">Imagen</label>
            </li>
          </ul>
        </div>
        <a class="next btn border--pink action-button right">Siguiente</a>
      </fieldset>
      <fieldset>
        <div class="file-box">
          {{ form_widget(form.file, {
            'id': 'input-file',
            'attr': {
              'data-multiple-caption': "{count} files selected",
            }}) }}
          <label for="input-file"><span>< Subí tu archivo ></span></label>
        </div>
        <label for="date-input">Elegí la fecha en la que se podrá abrir:</label>
        {{ form_widget(form.expirationDate, {'id': 'date-input'}) }}
        <label for="email">Ingresá tu mail:</label>
        {{ form_widget(form.ownerEmail, {'id': 'email'}) }}
        <a class="previous btn border--pink action-button left">Volver</a>
        {{  form_widget(form.submit, {'label': 'Siguiente', 'attr': {
              'class': 'next btn border--pink action-button right'
        }}) }}
      </fieldset>
      <fieldset>
      <div class="sk-fading-circle">
  <div class="sk-circle1 sk-circle"></div>
  <div class="sk-circle2 sk-circle"></div>
  <div class="sk-circle3 sk-circle"></div>
  <div class="sk-circle4 sk-circle"></div>
  <div class="sk-circle5 sk-circle"></div>
  <div class="sk-circle6 sk-circle"></div>
  <div class="sk-circle7 sk-circle"></div>
  <div class="sk-circle8 sk-circle"></div>
  <div class="sk-circle9 sk-circle"></div>
  <div class="sk-circle10 sk-circle"></div>
  <div class="sk-circle11 sk-circle"></div>
  <div class="sk-circle12 sk-circle"></div>
</div>
        <h2>Tus archivos están siendo cargados</h2>
        
      </fieldset>
    {{  form_end(form, {'render_rest': false}) }}

    <!-- jQuery -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"
      type="text/javascript"
    ></script>
    <!-- jQuery easing plugin -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"
      type="text/javascript"
    ></script>
  </body>
</html>
